@model IEnumerable<K22CNT3_LeVanHoang_2210900024_Project2.Models.LVH_CartItem>

@{
    ViewBag.Title = "Thông tin giỏ hàng";
}
<div class="row">
    <div class=" col-md-8">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenSanPham)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HinhAnh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoLuongMua)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DonGiaMua)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ThanhTien)
                    </th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenSanPham)
                        </td>
                        <td>
                            <img src="@item.HinhAnh" style="width:50px" alt="@item.TenSanPham">
                        </td>
                        <td>
                            <input type="number" name="SoLuongMua" id="SoLuongMua"
                                   value="@item.SoLuongMua" style="width:50px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonGiaMua)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThanhTien)
                        </td>
                        <td>
                            @Html.ActionLink("Update", "UpdateToCart", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>

                }
            </tbody>

        </table>
        <a href="/LVHCart/ThongTinThanhToan" class="btn btn btn-success">Thanh toán </a>
    </div>
</div>
